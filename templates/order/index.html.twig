{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
        <div class="bg-light p-3">
            <h1>Valider ma commande</h1>
        </div>
        <div class="d-flex flex-row recap">
            <div class="d-flex flex-column recap_user" style="margin-right: 100px;">
                <h1>Information de livraison</h1>
                {{ form_start(orderForm) }}
                <div class="col-md-4">{{ form_row(orderForm.billing_adress) }}</div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
            <div class="d-flex flex-column recap_panier">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.title }}</td>
                            <td>{{ item.product.price }} €</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.product.price * item.quantity }} €</td>
                            <td>
                                <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">X</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total :</td>
                        <td>{{ total }} €</td>
                        <td></td>
                    </tr>
                    </tfoot>
                </table>
                <button class="btn btn-primary">{{ button|default('Valider') }}</button>
            </div>
        </div>
    </div>

{% endblock %}
